<%= form_for @dm, url: new_user_drink_mix_path do |f| %>
    <% if @dm.errors.any? %>
        <div id="error_explanation">
            <h2>There were some errors:</h2>
            <ul>
                <% @dm.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <br>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <br><br>

    <%= f.submit "Create My DrinkMix" %>

<% end %>