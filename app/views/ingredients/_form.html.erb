<%= form_for @ingredient do |f| %>
    <%= f.hidden_field :recipe_id, value: @recipe.id %>
    <% if @ingredient.errors.any? %>
        <div id="error_explanation">
            <h2>There were some errors:</h2>
            <ul>
                <% @ingredient.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>Please Include All Forms of Measurment in Input Fields</p>
    <p>Example: "Prefered type of <%= @recipe.liquor.name %>," 2 fluid oz</p>

    <div class="field">
        <%= f.label :ingredient_name %>
        <%= f.text_field :name %>
    </div>

    <div class="field">
        <%= f.label :quantity %>
        <%= f.text_field :quantity %>
    </div>

<% end %>